{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: filter",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "filter",
                "--force-reprocess"
            ],
            "preLaunchTask": "uv sync"
        },
        {
            "name": "Python Debugger: score",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "score",
                "--force-reprocess"
            ],
            "preLaunchTask": "uv sync"
        }
    ]
}